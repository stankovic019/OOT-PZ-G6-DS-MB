<Window x:Class="OOT_PZ_Kursevi.Potvrdi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOT_PZ_Kursevi"
        mc:Ignorable="d"
        Title="Potvrdi" Height="450" Width="800">
    <Grid>
        <ListView x:Name="Lista_Potvrdi" HorizontalAlignment="Center" VerticalAlignment="Center" Height="450" Width="800">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naziv" DisplayMemberBinding="{Binding Naziv}" Width="250"/>
                    <GridViewColumn Header="Kategorija" DisplayMemberBinding="{Binding Kategorija}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
