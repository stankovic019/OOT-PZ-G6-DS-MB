<Window x:Class="OOT_PZ_Kursevi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOT_PZ_Kursevi"
        mc:Ignorable="d"
        Title="Kursevi" Height="720" Width="1280" WindowStartupLocation="CenterScreen">

    <!-- Glavno pitanje: 1280x720 rezolucija ili FULL screen -->
    
    <Border Padding="10">
        <TabControl Grid.Row="0">
            <TabItem Header="Dostupni kursevi"></TabItem>
            <TabItem Header="Izaberi kurs i prijavi se"></TabItem>
            <TabItem Header="Upravljaj kursevima"></TabItem>
        </TabControl>
    </Border>
</Window>
